@{
    ViewData["Title"] = "Citas";
}

@model Persona


<h1>@ViewData["Title"]</h1>

<div class="bg-white d-flex flex-row p-2">
    <div class="w-50">        
        <img alt="@Model.Nombre" src="~/css/@Model.img" />
        <p>@Model.Nombre  @Model.Paterno  @Model.Materno</p>
        <p>Medigo General</p>            
        <label class="fBusqueda" for="iBusqueda">Buscar Fecha</label>
        <input data-val="true" data-val-date="El campo debe de ser fecha."
                data-val-required="Valor Requerido."
                id="iBusqueda" name="iBusqueda" type="date" maxlength="10"
                class="form-control" autocomplete="false" onchange="BuscarFecha(@Model.IdRollElemento)">        
        <!--onchange="LimpiarCita()"<button type="button" class="btn btn-aux-plataforma-green mb-3 mt-3" onclick="BuscarFecha(@Model.IdRollElemento)">Buscar</button>-->
    </div>
    <div id="lCitas" class="w-50"></div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Plataforma Citas Medicas</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body" id="ContModal">
            ¿Confirmar cita?
          </div>
          <div id="EnviaCita" class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary">Aceptar</button>
          </div>
        </div>
      </div>
    </div>
    <script src="~/js/PlataformaCitas.js" asp-append-version="true"></script>
</div>
